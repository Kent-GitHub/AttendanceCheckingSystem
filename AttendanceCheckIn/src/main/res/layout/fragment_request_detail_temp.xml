<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#42a7ed"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/requestTypeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="23dp"
            android:text="事件"
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/request_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="05-23"
            android:textColor="#fff" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_forward_white" />

        <TextView
            android:id="@+id/request_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:text="请假一天"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

    <com.laughing8.attendancecheckin.view.custom.StrokeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="20dp"
        app:strokeBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[理由]"
            android:textColor="#42a7ed" />

        <TextView
            android:id="@+id/request_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minLines="8"
            android:paddingLeft="10dp"
            android:text="就是任性" />
    </com.laughing8.attendancecheckin.view.custom.StrokeLinearLayout>

    <com.laughing8.attendancecheckin.view.custom.StrokeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        app:strokeBottom="true">

        <TextView
            android:id="@+id/textLeft1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="80dp"
            android:padding="10dp"
            android:text="我" />

        <TextView
            android:id="@+id/textMiddle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="于 2016年5月23日22:05:02" />

        <TextView
            android:id="@+id/textRight1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="发起申请" />
    </com.laughing8.attendancecheckin.view.custom.StrokeLinearLayout>

    <com.laughing8.attendancecheckin.view.custom.StrokeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        app:strokeBottom="true">

        <TextView
            android:id="@+id/textLeft2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="80dp"
            android:padding="10dp"
            android:text="某某某" />

        <TextView
            android:id="@+id/textMiddle2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="于 2016年5月23日22:05:02" />

        <TextView
            android:id="@+id/textRight2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="等待审核" />
    </com.laughing8.attendancecheckin.view.custom.StrokeLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <com.laughing8.attendancecheckin.view.custom.StrokeLinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="1px"
        app:strokeTop="true">
        <Button
            android:id="@+id/btn_callback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="撤回申请" />
        <View
            android:background="#c0c0c0"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_approve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="同意申请" />
    </com.laughing8.attendancecheckin.view.custom.StrokeLinearLayout>

</LinearLayout>